@{
    ViewBag.Title = "Home Page";
}
@model List<KembimValutor.Models.rates>

<div class="form-group search-bar-div">
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Search</h2>
            <div>
                <input type="text" name="name" value="" />
            </div>
            
            <div class="form-group">
                    <input type="submit" value="Search" class="btn" />
            </div>
        </div>
    }
</div>
<hr class="currency-container" />
<div class="currency-container">
    @foreach (var rate in Model)
    {
        <ul class="list-inline">
            @if (Session["user_id"] != null)
            {
                <li>@Html.ActionLink("Add to Favorites", "favorite", "Home", new { RateId = rate.RateId }, new { @class = "" })</li>
            }
            <li>@rate.Curr1</li>
            <li>-</li>
            <li>@rate.Curr2</li>
            <li style="float:right">@rate.Rate</li>
        </ul>
        <hr />
    }
</div>