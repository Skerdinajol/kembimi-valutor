<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
    
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container mt-2" style="border-left: black solid; background-color: #9fa7a4; border-radius: 10vh; ">
            <div class="navbar-header">
                @Html.ActionLink("Exchange", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color: #443c3c;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-right navbar-nav">
                    @if (Session["user_id"] == null)
                    {
                        <li>@Html.ActionLink("Log In", "login", "Account", new { area = "" }, new { @class = "nav-right" })</li>
                        <li>@Html.ActionLink("Register", "register", "Account", new { area = "" }, new { @class = "nav-right" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Log Out", "logout", "Account", new { area = "" }, new { @class = "nav-right" })</li>
                        <li>@Html.ActionLink("User", "userdetails", "Account", new { area = "" }, new { @class = "nav-right" })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
